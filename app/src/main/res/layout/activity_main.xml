<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="za.co.example.bonginkosilukhele.courtcounter.MainActivity"
    android:weightSum="1">


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="400dp"
    android:orientation="horizontal"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.50"
        android:background="@drawable/bb_court">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:background="#FF3D00"
            />

        <TextView
            android:id="@+id/home_score_txtvw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:padding="24dp"
            android:textColor="@color/colorAccent"
            />

        <Button
            android:id="@+id/btn_home_3points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="+3 points"
            android:onClick="add3Home"
            style="@style/Widget.AppCompat.Button.Colored"/>
        <Button
            android:id="@+id/btn_home_2points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="+2 points"
            android:onClick="add2Home"
            style="@style/Widget.AppCompat.Button.Colored"/>
        <Button
            android:id="@+id/btn_home_1point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="free throw"
            android:onClick="add1Home"
            style="@style/Widget.AppCompat.Button.Colored"/>

    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/colorPrimaryDark"/>
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/colorAccent"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.50"
        android:background="@drawable/bb_court">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Away"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:background="#4CAF50"/>
        <TextView
            android:id="@+id/away_score_txtvw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:padding="24dp"
            android:textColor="@color/colorAccent"
            />

        <Button
            android:id="@+id/btn_away_3points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="+3 points"
            android:onClick="add3Away"
            style="@style/Widget.AppCompat.Button.Colored"/>
        <Button
            android:id="@+id/btn_away_2points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="+2 points"
            android:onClick="add2Away"
            style="@style/Widget.AppCompat.Button.Colored"/>
        <Button
            android:id="@+id/btn_away_1point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="free throw"
            android:onClick="add1Away"
            style="@style/Widget.AppCompat.Button.Colored"/>
    </LinearLayout>
</LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="reset"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:onClick="resetScore"
        />
</RelativeLayout>